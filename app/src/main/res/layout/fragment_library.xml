<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.library.LibraryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/header_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Your Library"
            android:textAppearance="?attr/textAppearanceHeadline5" />

        <!-- Liked Songs Section (Example: Simple Button/TextView) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_liked_songs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_heart_filled"
                    app:tint="?attr/colorPrimary" /> <!-- Example tint -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Liked Songs"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Playlists Section Header -->
        <TextView
            android:id="@+id/header_library_playlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Playlists"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <!-- Placeholder for Playlists List -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="(Playlist RecyclerView placeholder)"
            android:textAppearance="?attr/textAppearanceCaption" />
        <!-- Replace above TextView with RecyclerView later -->
        <!-- <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/library_playlists_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/song_card" /> -->


        <!-- Artists Section Header -->
        <TextView
            android:id="@+id/header_library_artists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Artists"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <!-- Placeholder for Artists List -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="(Artists RecyclerView placeholder)"
            android:textAppearance="?attr/textAppearanceCaption" />

        <!-- Albums Section Header -->
        <TextView
            android:id="@+id/header_library_albums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Albums"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <!-- Placeholder for Albums List -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="(Albums RecyclerView placeholder)"
            android:textAppearance="?attr/textAppearanceCaption" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>